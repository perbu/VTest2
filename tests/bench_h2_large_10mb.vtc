vtest "HTTP/2 Large Body Transfer (10MB) Benchmark"

# Test large body transfer (10MB)

server s1 {
    rxreq
    # Generate 10MB response (10 * 1024 * 1024 = 10485760 bytes)
    txresp -status 200 -bodylen 10485760
} -start

client c1 -connect ${s1_sock} {
    txreq -url "/"
    rxresp
    expect resp.status == 200
    expect resp.bodylen == 10485760
} -run
